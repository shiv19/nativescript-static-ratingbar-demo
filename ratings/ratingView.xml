<Repeater id="ratingsBar" items="{{ items }}" loaded="loaded">
	<Repeater.itemsLayout>
		<StackLayout class="p-20" orientation="horizontal" />
	</Repeater.itemsLayout>
	<Repeater.itemTemplate>
		<StackLayout orientation="vertical">
			<Label 
                class="fa"
                fontColor="{{ color }}"
                fontSize="30" marginLeft="2" marginRight="2" marginBottom="10" class="text-center" text="{{ icon }}" />
		</StackLayout>
	</Repeater.itemTemplate>
</Repeater>